<% if user_signed_in? %>
  <h2> Hello <%= current_user.email %> </h2>
  <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete } %>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %>
<% end %>
<h1>Post List</h1>

<table class="table table-striped table-hover">
  <thead>
  <td>category</td>
  <td>title</td>
  <td>content</td>
  <td>action</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.categories.pluck(:name).join(',') %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td>
        <%= link_to :edit, edit_post_path(post), class: 'btn btn-success' %>
        <%= link_to :show, post_path(post), class: 'btn btn-info' %>
        <%= button_to :delete, post_path(post), method: :delete, class: 'btn btn-danger' %>
        <%= link_to :comments, post_comments_path(post), class: 'btn btn-dark' %>
        <%= link_to 'New Comment', new_post_comment_path(post), class: 'btn btn-light' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to :new, new_post_path, class: 'btn btn-primary' %>
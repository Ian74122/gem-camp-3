<h1>New Post</h1>

<%= form_with model: @post, url: posts_path do |form| %>
  <% if @post.errors.any? %>
    <ul>
      <% @post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit :submit %>
<% end %>


<%= link_to :index, posts_path %>